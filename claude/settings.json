{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "deny": [
      "Bash(sudo:*)",
      "Bash(rm:*)",
      "Bash(rm -rf:*)",
      "Bash(git push:*)",
      "Bash(git reset:*)",
      "Bash(git rebase:*)",
      "Read(.env.*)",
      "Read(id_rsa)",
      "Read(id_ed25519)",
      "Read(**/*token*)",
      "Read(**/*key*)",
      "Write(.env*)",
      "Write(**/secrets/**)",
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Bash(nc:*)",
      "Bash(pnpm uninstall:*)",
      "Bash(pnpm remove:*)",
      "Bash(psql:*)",
      "Bash(mysql:*)",
      "mcp__notion__API-patch-block-children",
      "mcp__notion__API-update-a-block",
      "mcp__notion__API-delete-a-block",
      "mcp__notion__API-patch-page",
      "mcp__notion__API-post-page",
      "mcp__notion__API-create-a-database",
      "mcp__notion__API-update-a-database",
      "mcp__notion__API-create-a-comment"
    ],
    "defaultMode": "plan"
  },
  "model": "sonnet",
  "enableAllProjectMcpServers": true,
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/Users/nasuno.ayumu/.claude/hooks/state-notify.sh idle"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/Users/nasuno.ayumu/.claude/hooks/state-notify.sh working"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "/Users/nasuno.ayumu/.claude/hooks/state-notify.sh working"
          }
        ]
      },
      {
        "matcher": "ExitPlanMode",
        "hooks": [
          {
            "type": "command",
            "command": "code \"$(ls -t ~/.claude/plans/*.md | head -1)\"",
            "timeout": 5
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "permission_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "/Users/nasuno.ayumu/.claude/hooks/state-notify.sh permission_prompt"
          }
        ]
      },
      {
        "matcher": "idle_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "/Users/nasuno.ayumu/.claude/hooks/state-notify.sh idle_prompt"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/Users/nasuno.ayumu/.claude/hooks/state-notify.sh complete"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/Users/nasuno.ayumu/.claude/hooks/state-notify.sh ended"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "/Users/nasuno.ayumu/.claude/statusline.sh"
  },
  "enabledPlugins": {
    "frontend-design@claude-plugins-official": true,
    "feature-dev@claude-plugins-official": true,
    "code-review@claude-plugins-official": true,
    "pr-review-toolkit@claude-plugins-official": true,
    "context7@claude-plugins-official": true,
    "figma@claude-plugins-official": true,
    "Notion@claude-plugins-official": true,
    "sentry@claude-plugins-official": true,
    "code-simplifier@claude-plugins-official": true,
    "plugin-dev@claude-plugins-official": true,
    "claude-md-management@claude-plugins-official": true
  },
  "language": "日本語"
}
