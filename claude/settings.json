{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "deny": [
      "Bash(sudo:*)",
      "Bash(rm:*)",
      "Bash(rm -rf:*)",
      "Bash(git push:*)",
      "Bash(git reset:*)",
      "Bash(git rebase:*)",
      "Read(.env.*)",
      "Read(id_rsa)",
      "Read(id_ed25519)",
      "Read(**/*token*)",
      "Read(**/*key*)",
      "Write(.env*)",
      "Write(**/secrets/**)",
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Bash(nc:*)",
      "Bash(pnpm uninstall:*)",
      "Bash(pnpm remove:*)",
      "Bash(psql:*)",
      "Bash(mysql:*)",
      "mcp__notion__API-patch-block-children",
      "mcp__notion__API-update-a-block",
      "mcp__notion__API-delete-a-block",
      "mcp__notion__API-patch-page",
      "mcp__notion__API-post-page",
      "mcp__notion__API-create-a-database",
      "mcp__notion__API-update-a-database",
      "mcp__notion__API-create-a-comment"
    ],
    "defaultMode": "plan"
  },
  "enableAllProjectMcpServers": true,
  "hooks": {
    "Notification": [
      {
        "matcher": "permission_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "terminal-notifier -title 'Claude Code' -message '実行権限を要求しています...' -sound 'blow' -ignoreDnD -activate 'com.todesktop.230313mzl4w4u92'"
          }
        ]
      },
      {
        "matcher": "elicitation_dialog",
        "hooks": [
          {
            "type": "command",
            "command": "terminal-notifier -title 'Claude Code' -message '質問に回答してください...' -sound 'blow' -ignoreDnD -activate 'com.todesktop.230313mzl4w4u92'"
          }
        ]
      },
      {
        "matcher": "idle_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "terminal-notifier -title 'Claude Code' -message '待機中です...\n対応してください' -sound 'blow' -ignoreDnD -activate 'com.todesktop.230313mzl4w4u92'"
          }
        ]
      },
      {
        "matcher": "auth_success",
        "hooks": [
          {
            "type": "command",
            "command": "terminal-notifier -title 'Claude Code' -message 'ユーザーの対応が必要です...' -sound 'blow' -ignoreDnD -activate 'com.todesktop.230313mzl4w4u92'"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "terminal-notifier -title 'Claude Code' -message '対応が完了しました' -sound 'submarine' -ignoreDnD -activate 'com.todesktop.230313mzl4w4u92'"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "/Users/nasuno.ayumu/.claude/statusline.sh"
  },
  "enabledPlugins": {
    "example-skills@anthropic-agent-skills": true
  },
  "alwaysThinkingEnabled": true
}
