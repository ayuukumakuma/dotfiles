[alias]
  s   = switch
  st  = stash -u
  stp = stash pop
  sta = stash apply
  a   = add
  c   = commit
  p   = pull
  ps  = push
  d   = "!echo 'git clean -fd && git restore .' && git clean -fd && git restore ."
  f   = fetch
[color]
  ui = true
[pull]
  ff = only
[init]
  defaultBranch = main
[gpg]
  format = ssh
[gpg "ssh"]
  program = /Applications/1Password.app/Contents/MacOS/op-ssh-sign
[commit]
  gpgsign = true
[push]
  autoSetupRemote = true
[core]
  editor = nvim
  pager  = delta
  diff   = delta
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true  # use n and N to move between diff sections
    dark     = true      # or light = true, or omit for auto-detection
    side-by-side = true
    line-numbers = true
[merge]
    conflictStyle = zdiff3
[ghq]
  root = ~/dev
  user = ayuukumakuma
[include]
  path = ~/.config/git/config.local
